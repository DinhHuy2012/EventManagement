@page "/Admin/ManageAccount/Index"
@model EventManagement.Pages.Admin.Account.IndexModel
@{
    ViewBag.Title = "AccountManagement";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";

}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers



<!-- **************** MAIN CONTENT START **************** -->
<main>

    <!-- Sidebar START -->
    <!-- Sidebar END -->
    <!-- Page content START -->
    <div class="page-content">
        <div class="page-content-wrapper border">

            <!-- Title -->
            <div class="row">
                <div class="col-12">
                    <h1 class="h3 mb-2 mb-sm-0">Accounts</h1>
                </div>
            </div>

            <div class="card bg-transparent">

                <!-- Card header START -->
                <div class="card-header bg-transparent border-bottom px-0">
                    <!-- Search and select START -->
                    <div class="row g-3 align-items-center justify-content-between">
                        <div class="col-md-6">
                            <a href="/Admin/ManageAccount/Create" class="btn btn-primary">
                                Create
                                <i class="fa fa-plus"></i>
                            </a>
                           
                        </div>
                        <div class="col-md-6">
                          
                            <form class="rounded position-relative">
                                <input id="searchInput" class="form-control bg-transparent" oninput="ShowUser()" type="search" placeholder="Search by FullName,UserName,Email,Phone,Role." aria-label="Search">
                                <button class="btn bg-transparent px-2 py-0 position-absolute top-50 end-0 translate-middle-y" type="submit"><i class="fas fa-search fs-6 "></i></button>
                            </form>
                        </div>

                        <!-- Tab button -->

                    </div>
                    <!-- Search and select END -->
                </div>
                <!-- Card header END -->
                <!-- Card body START -->
                <div class="card-body px-0">

                    <!-- Tabs content START -->
                    <div class="tab-content" id="next-item-page">

                        <!-- Tabs content item START -->
                        <!-- Tabs content item END -->
                        <!-- Tabs content item START -->
                        <div>
                            <div class="table-responsive border-0">
                                <table class="table table-dark-gray align-middle p-4 mb-0 table-hover">
                                    <!-- Table head -->
                                    <thead>
                                        <tr>
                                            <th scope="col" class="border-0 rounded-start">UserName</th>
                                            <th scope="col" class="border-0">Join date</th>
                                            <th scope="col" class="border-0">Email</th>
                                            <th scope="col" class="border-0">Phone</th>
                                            <th scope="col" class="border-0">Role</th>
                                            <th scope="col" class="border-0">Status</th>
                                            <th scope="col" class="border-0 rounded-end">Action</th>
                                        </tr>
                                    </thead>

                                    <!-- Table body START -->
                                    <tbody>
                                        <!-- Table row -->
                                        <tr>
                                            <!-- Table data -->

                                        </tr>



                                    </tbody>
                                    <!-- Table body END -->
                                </table>
                            </div>
                        </div>
                        <!-- Tabs content item END -->

                    </div>
                    <!-- Tabs content END -->
                </div>
                <!-- Card body END -->
                <!-- Card footer START -->
                <div class="card-footer bg-transparent pt-0 px-0">
                    <!-- Pagination START -->
                    <div class="d-sm-flex justify-content-sm-between align-items-sm-center">
                        <!-- Content -->
                        <p class="mb-0 text-center text-sm-start">Showing <span id="startIndex"></span> to <span id="endIndex"></span> of <span id="totalUsers"></span> entries</p>
                        <!-- Pagination -->
                        <nav class="d-flex justify-content-center mb-0" aria-label="navigation">
                            <ul class="pagination pagination-sm pagination-primary-soft mb-0 pb-0 px-0">
                                <!-- Pagination will be dynamically populated -->
                            </ul>
                        </nav>
                    </div>
                    <!-- Pagination END -->
                </div>
                <!-- Card footer END -->
            </div>
        </div>
        <!-- Page main content END -->

    </div>
    <!-- Page content END -->

</main>
<!-- **************** MAIN CONTENT END **************** -->
<!-- Back to top -->
<div class="back-top"><i class="bi bi-arrow-up-short position-absolute top-50 start-50 translate-middle"></i></div>

<!-- Bootstrap JS -->
<script type="text/javascript" src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>

<script src="~/js/user.js" asp-append-version="true"></script>






