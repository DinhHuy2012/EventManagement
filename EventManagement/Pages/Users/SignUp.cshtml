@page "/SignUp"
@model EventManagement.Pages.Users.SignUpModel

@{
	ViewBag.Title = "SignUp";

	Layout = "~/Pages/Shared/_Layout.cshtml";

}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers



<section class="p-0 d-flex align-items-center position-relative overflow-hidden">

	<div class="container-fluid">
		<div class="row">
			<!-- left -->
			<div class="col-12 col-lg-6 d-md-flex align-items-center justify-content-center bg-primary bg-opacity-10 vh-lg-100">
				<div class="p-12 p-lg-5">
					<!-- Title -->
					<!-- SVG Image -->
					<img src="assets/images/element/corporate-events.jpg" class="mt-5" alt="" >
					<!-- Info -->

				</div>
			</div>

			<!-- Right -->
			<div class="col-12 col-lg-6 m-auto">
				<div class="row my-5">
					<div class="col-sm-10 col-xl-8 m-auto">
						<!-- Title -->
						<span class="mb-0 fs-1">👋</span>
						<h1 class="fs-2">SignUp</h1>

						<!-- Form START -->
					
						<form method="post">
							<!-- Email -->
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>

							<div class="mb-4">
								<label asp-for="User.Username" class="form-label"></label>
								<div class="input-group input-group-lg">
									<span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="bi bi-envelope-fill"></i></span>
									<input asp-for="User.Username" type="text" class="form-control border-0 bg-light rounded-end ps-1" placeholder="Username">

								</div>
								<span asp-validation-for="User.Username" class="text-danger"></span>

							</div>
							<!-- Password -->
							<div class="mb-4">
								<label asp-for="User.Password" class="form-label"></label>
								<div class="input-group input-group-lg">
									<span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="fas fa-lock"></i></span>
									<input asp-for="User.Password" type="password" class="form-control border-0 bg-light rounded-end ps-1" placeholder="Password">
								</div>
								<span asp-validation-for="User.Password" class="text-danger"></span>
							</div>
							<div class="mb-4">
								<label asp-for="ConfirmPassword" class="form-label"></label>
								<div class="input-group input-group-lg">
									<span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="fas fa-lock"></i></span>
									<input asp-for="ConfirmPassword" type="password" class="form-control border-0 bg-light rounded-end ps-1" placeholder="Confirm Password">
								</div>
								<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
							</div>

							<div class="mb-4">
								<label asp-for="User.Email" class="form-label"></label>
								<div class="input-group input-group-lg">
									<span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="bi bi-envelope-fill"></i></span>
									<input asp-for="User.Email" type="text" class="form-control border-0 bg-light rounded-end ps-1" placeholder="Email" require>

								</div>
								<span asp-validation-for="User.Email" class="text-danger"></span>
							</div>
							<div class="mb-4">
								<label asp-for="User.Fullname" class="form-label"></label>
								<div class="input-group input-group-lg">
									<span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"></span>
									<input asp-for="User.Fullname" type="text" class="form-control border-0 bg-light rounded-end ps-1" placeholder="Fullname">

								</div>
								<span asp-validation-for="User.Fullname" class="text-danger"></span>
							</div>
							<div class="mb-4">
								<label asp-for="User.Phone" class="form-label"></label>
								<div class="input-group input-group-lg">
									<span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"></span>
									<input asp-for="User.Phone" type="text" class="form-control border-0 bg-light rounded-end ps-1" placeholder="Phone">
								</div>
								<span asp-validation-for="User.Phone" class="text-danger"></span>
							</div>				
							
							<!-- Button -->
							<div class="align-items-center mt-0">
								<div class="d-grid">
									<button class="btn btn-primary mb-0" type="submit">SignUp</button>
								</div>
							</div>
						</form>
						<!-- Form END -->
						<!-- Social buttons and divider -->
						<div class="row">
							<!-- Divider with text -->
							<div class="position-relative my-4">
								<hr>
								<p class="small position-absolute top-50 start-50 translate-middle bg-body px-5">Or</p>
							</div>

							<!-- Social btn -->
							<div class="col-xxl-6 d-grid">
								<a href="#" class="btn bg-google mb-2 mb-xxl-0"><i class="fab fa-fw fa-google text-white me-2"></i>Login with Google</a>
							</div>
							<!-- Social btn -->
							<div class="col-xxl-6 d-grid">
								<a href="#" class="btn bg-facebook mb-0"><i class="fab fa-fw fa-facebook-f me-2"></i>Login with Facebook</a>
							</div>
						</div>

						<!-- Sign up link -->
						<div class="mt-4 text-center">
							<span>Don't have an account? <a href="sign-up.html">Signup here</a></span>
						</div>
					</div>
				</div> <!-- Row END -->
			</div>
		</div> <!-- Row END -->
	</div>
</section>